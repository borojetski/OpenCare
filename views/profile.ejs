<%- include('partials/header') -%>

		<!-- Page Wrapper -->
			<div id="page-wrapper">

				<!-- Header -->
					<header id="header">
						<h1><a href="/">OpenCare</a></h1>
						<nav>
							<a href="#menu">Menu</a>
						</nav>
					</header>

				<!-- Menu -->
					<nav id="menu">
						<div class="inner">
							<h2>Menu</h2>
							<ul class="links">
								<li><a href="/">Home</a></li>
								<li><a href="/dashboard">Dashboard</a></li>
								<li><a href="/logout">Sign Out</a></li>
							</ul>
						</div>
					</nav>

				<!-- Main -->
					<div id="main">
						<section id="content" class="default">
							<header class="major">
								<h2>Edit User Profile</h2>
							</header>
							<div class="content">
								<form action="/editUser/<%= user._id %>?_method=PUT" method="POST">
									<div>
										<label for="editUserName">Edit Username:</label>
										<input type="text" id="editUserName" name="userName" value="<%= user.userName %>"/>
									</div>
									<div>
										<label for="editEmail">Edit Email:</label>
										<input type="email" id="editEmail" name="email" value="<%= user.email %>"/>
									</div>
									<div>
										<label for="editPassword">Edit Password:</label>
										<input type="password" id="editPassword" name="password" value="<%= user.password %>"/>
									</div>
									</br>
									<button type="submit" class="button primary">Submit</button>
								</form>
							</div>
						</section>
					</div>

				<!-- Footer -->
					<section id="footer">
						<div class="copyright">
							<a href="https://github.com/borojetski/OpenCare">
								<p class="icon brands fa-github"> Created by Paul Borowiecki, licensed under GPL 3.0</p>
							</a>
						</div>
					</section>

			</div>

<%- include('partials/footer') -%>