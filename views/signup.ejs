<%- include('partials/header') -%>

		<!-- Page Wrapper -->
			<div id="page-wrapper">

				<!-- Header -->
					<header id="header">
						<h1><a href="index.html">OpenCare</a></h1>
						<nav>
							<a href="#menu">Menu</a>
						</nav>
					</header>

				<!-- Menu -->
					<nav id="menu">
						<div class="inner">
							<h2>Menu</h2>
							<ul class="links">
								<li><a href="/">Home</a></li>
								<li><a href="/about">About</a></li>
							</ul>
						</div>
					</nav>

				<!-- Main -->
					<div id="main">
						<section id="content" class="default">
							<header class="major">
								<h2>Sign Up</h2>
							</header>
							<div class="content">
								<% if (locals.messages.errors) { %>
									<% messages.errors.forEach( el => { %>
										<div style="color: rgb(191, 146, 141)"><%= el.msg %></div></br>
									<% }) %>    
								<% } %>
								<% if (locals.messages.info) { %>
									<% messages.info.forEach( el => { %>
										<div style="color: rgb(191, 146, 141)"><%= el.msg %></div></br>
									<% }) %>    
								<% } %>
								<form action="/signup" method="POST">
									<div>
										<label for="userName">User Name</label>
										<input type="text" id="userName" name="userName">
									  </div>
									<div>
									  <label for="inputEmail">Email address</label>
									  <input type="email" id="inputEmail" aria-describedby="emailHelp" name="email" placeholder="We'll never share your email with anyone else.">
									</div>
									<div>
									  <label for="inputPassword">Password</label>
									  <input type="password" id="inputPassword" name="password">
									</div>
									<div>
										<label for="confirmPassword">Confirm Password</label>
										<input type="password" id="confirmPassword" name="confirmPassword">
									  </div>
									</br>
									<button type="submit" class="button primary">Submit</button>
								  </form>
							</div>
						</section>
					</div>

				<!-- Footer -->
					<section id="footer">
						<div class="copyright">
							<a href="https://github.com/borojetski/OpenCare">
								<p class="icon brands fa-github"> Created by Paul Borowiecki, licensed under GPL 3.0</p>
							</a>
						</div>
					</section>

			</div>

<%- include('partials/footer') -%>